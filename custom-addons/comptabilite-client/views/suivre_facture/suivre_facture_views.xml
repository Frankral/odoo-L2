<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_suivre_facture_tree" model="ir.ui.view">
        <field name="name">view_suivre_facture.tree</field>
        <field name="model">compta.facture</field>
        <field name="arch" type="xml">
            <tree string="Factures">
                <field name="numFacture" />
                <field name="dateFacture" optional="show"/>
                <field name="montantTotalFacture" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_suivre_facture_form" model="ir.ui.view">
        <field name="name">view_facture.form</field>
        <field name="model">compta.facture</field>
        <field name="arch" type="xml">
            <form string="Factures">
                <header>
                    <button string="Envoyer" name="action_envoyer" type="object" class="oe_highlight" invisible="etatFacture != 'brouillon'"/>
                    <button string="Ajouter un paiement" name="action_paiement" type="object" class="oe_highlight" invisible="etatFacture != 'envoyee'"/>
                    <button string="Archiver la facture" name="action_archiver" type="object" class="oe_highlight" invisible="etatFacture != 'payee'"/>
                    <button string="Annuler la facture" name="action_annuler" type="object" invisible="etatFacture == 'archivee' or etatFacture == 'annulee'"/>
                    <field name="etatFacture" widget="statusbar" options='{"clickable": "1"}'/>
                </header>
                <sheet>
                    <group>
                        <field name="numFacture" readonly="True"/>
                    </group>
                    <group>
                        <field name="dateFacture" />
                        <field name="currency_id" invisible="True"/>
                        <field name="montantTotalFacture" readonly="1" widget="monetary"/>
                        <!-- <field name="etatFacture" /> -->
                    </group>
                    <group>
                        <field name="commande_id" readonly="numFacture != 'Nouveau'" options="{'no_open': True}"/>
                    </group> 
                    <group>
                        <field name="creance_id" />
                    </group>
                    <notebook>
                        <page string="Lignes de factures">
                            <field name="ligne_facture_ids" context="{'commande_id': commande_id}">
                                <tree editable="bottom">
                                    <field name="numLigneFacture" readonly="1"/>
                                    <field name="commande_id" optional="hide"/>
                                    <field name="ligne_commande_id" options="{'no_create': True}" domain="[('commande_id','=', context.get('commande_id'))]"/>
                                    <field name="qteFacturee" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_compta_suivre_facture" model="ir.actions.act_window">
        <field name="name">Factures</field>
        <field name="res_model">compta.facture</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[Command.clear(),
                (0,0, {'view_mode':'tree', 'view_id': ref('view_suivre_facture_tree')}),
                (0,0, {'view_mode':'form', 'view_id': ref('view_suivre_facture_form')})]"/>
        
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle facture
            </p>
        </field>
    </record>

</odoo>