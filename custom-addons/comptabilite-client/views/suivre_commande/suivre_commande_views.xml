<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_commande_tree" model="ir.ui.view">
        <field name="name">view_commande.tree</field>
        <field name="model">compta.commande</field>
        <field name="arch" type="xml">
            <tree string="Commandes">
                <field name="numCommande" />
                <field name="dateCommande"/>
                <field name="etatCommande"/>
                <field name="currency_id" optional="hide" />
                <field name="montantTotal" widget="monetary"/>
            </tree>
        </field>
    </record>
    
    <record id="view_commande_form" model="ir.ui.view">
        <field name="name">view_commande.form</field>
        <field name="model">compta.commande</field>
        <field name="arch" type="xml">
            <form string="Commandes">
                <header>
                    <button string="Confirmer" name="action_confirmer" type="object" class="oe_highlight" invisible="etatCommande != 'brouillon'"/>
                    <button string="Créer une facture" name="action_creer_facture" type="object" class="oe_highlight" invisible="etatCommande != 'confirmee' and etatCommande != 'cours'"/>
                    <button string="Archiver" name="action_archiver" type="object" class="oe_highlight" invisible="etatCommande != 'payee'"/>
                    <button string="Annuler commande" name="action_annuler" type="object" invisible="etatCommande == 'archivee' or etatCommande == 'annulee'" />
                    <field name="etatCommande" widget="statusbar" options='{"clickable": "1"}'/>
                </header>
                <sheet>
                    <group>
                        <field name="numCommande" readonly="True" string="Commande N°"/>
                    </group>
                    <group>
                        <field name="dateCommande" readonly="etatCommande != 'brouillon'"/>
                        <field name="currency_id" invisible="True"/>
                        <field name="montantTotal" widget="monetary"/>
                    </group>
                    <group>
                        <field name="client_id" invisible="etatCommande == 'brouillon'" readonly="True" options="{'no_open': True}"/>
                        <field name="client_id" invisible="etatCommande != 'brouillon'"/>
                    </group>
                    <notebook>
                        <page string="Lignes de commande">
                            <field name="ligne_commande_ids" readonly="etatCommande != 'brouillon'">
                                <tree editable="bottom">
                                    <field name="numLigneCommande" readonly='1'/>
                                    <field name="ressource_id" />
                                    <field name="qteTotalRessource" string="Quantité"/>
                                    <field name="qteTotalFacturee" string="Facturés" readonly="1"/>
                                    <field name="unite"/>
                                    <!-- <field name="ressource_stock"/> -->
                                </tree>
                            </field>
                        </page>
                        <page string="Factures" invisible="etatCommande == 'archivee' or etatCommande == 'annulee'">
                            <field name="facture_ids" >
                                <tree editable="bottom" create="0" edit='0' delete="true">
                                    <field name="numFacture" />
                                    <field name="dateFacture" />
                                    <field name="montantTotalFacture"/>
                                    <button string="Voir la facture" name="action_facture" type="object" class="oe_highlight"/>
                                </tree>
                            </field>
                        </page>
                        <page name="fct" string="Factures" invisible="etatCommande != 'archivee' and etatCommande != 'annulee'">
                            <field name="facture_ids">
                                <tree editable="bottom" create="0" edit='0' delete="true">
                                    <field name="numFacture" />
                                    <field name="dateFacture" />
                                    <field name="montantTotalFacture"/>
                                    <!-- <button string="Voir la facture" name="action_facture" type="object" class="oe_highlight"/> -->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_compta_suivre_commande" model="ir.actions.act_window">
        <field name="name">Commandes</field>
        <field name="res_model">compta.commande</field>
        <field name="view_mode">tree,form</field>
        
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle commande
            </p>
        </field>
    </record>

</odoo>