<?xml version="1.0" encoding="utf-8"?>
<data>

    <record id="sale_order_form_inherit_auto_invoice" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.auto.invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page name="automation" string="Automatisation">
                    <group>
                        <group>
                            <field name="automatise_invoice" widget="boolean_toggle" readonly="state != 'draft'"/>
                            <field name="invoice_date_selection" required="1" readonly="state != 'draft' or not automatise_invoice"/>
                            <field name="invoice_date" invisible="invoice_date_selection != 'custom'" readonly="state != 'draft' or not automatise_invoice"/>
                            
                        </group>
                        <group>
                            <field name="invoice_ref" readonly="state != 'draft' or not automatise_invoice"/>
                            <field name="invoice_payment_ref" readonly="state != 'draft' or not automatise_invoice"/>
                            <field name="invoice_payment_term_id" readonly="state != 'draft' or not automatise_invoice"/>
                        </group>
                        <group>
                            <field name="invoice_incoterm_id" readonly="state != 'draft' or not automatise_invoice"/>
                            <field name="invoice_incoterm_location" readonly="state != 'draft' or not automatise_invoice"/>
                            <field name="invoice_auto_post" required="1" readonly="state != 'draft' or not automatise_invoice"/>                            
                        </group>

                    </group>
                </page>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="product_invoice_policy" required='1' readonly="state != 'draft'"/> Â  
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="replace">
                <button string="Confirmer la commande" name="confirmer_commande" type="object" class="oe_highlight" invisible="state != 'sent'"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="replace">
                <button string="Confirmer la commande" name="confirmer_commande" type="object" invisible="state != 'draft'"/>
            </xpath>
        </field>
     </record>

</data>
